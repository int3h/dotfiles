#!/usr/bin/env ruby

require 'fileutils'


module OS
    def OS.mac?; (/darwin/ =~ RUBY_PLATFORM) != nil; end
    def OS.linux?; (/linux/ =~ RUBY_PLATFORM) != nil; end

    def OS.to_s
        return "Mac" if OS.mac?
        return "Linux" if OS.linux?
        return "unknown"
    end
end


# Taken from homebrew's Library/Homebrew/
class Say
  class << self
    def action(msg)
        puts unless @@first # Print a blank line to seperate this message
        @@first = false
        puts "#{blue}==>#{white} #{msg}#{reset}"
    end

    private

    @@first = true

    def blue; bold 34; end
    def white; bold 39; end
    def red; underline 31; end
    def yellow; underline 33; end
    def reset; escape 0; end
    def em; underline 39; end
    def green; bold 32; end
    def gray; bold 30; end

    def color n; escape "0;#{n}"; end
    def bold n; escape "1;#{n}"; end
    def underline n; escape "4;#{n}"; end
    def escape n; "\033[#{n}m" if $stdout.tty?; end
  end

end


# Symlink the right system-specific gitconfig to ~/.gitsupport/gitconfig.active
unless File.exist?("#{Dir.home}/.gitsupport/gitconfig.active")
    Say.action "Symlinking #{OS.to_s} gitconfig as active gitconfig"

    if OS.mac?
        FileUtils.ln_s "gitconfig.mac", "#{Dir.home}/.gitsupport/gitconfig.active"
    elsif OS.linux?
        FileUtils.ln_s "gitconfig.linux", "#{Dir.home}/.gitsupport/gitconfig.active"
    end
end

if OS.mac?
    Say.action "Setting ~/bin to hidden"
    `chflags hidden ~/bin`
end

